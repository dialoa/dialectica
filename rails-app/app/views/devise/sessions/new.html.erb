<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {data: {cy: "user_login_form"}}) do |f| %>
  <div class="form-inputs">
    <%#= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :login, label: "username or email", required: false, autofocus: true, input_html: { autocomplete: "email" } %>

    <%= f.input :password,
                label: "password",
                required: false,
                input_html: { autocomplete: "current-password" } %>

    <%= f.input :remember_me, label: " remember me", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "login", class: "btn btn-primary" %>
  </div>
<% end %>
