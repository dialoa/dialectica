
<%= simple_form_for(@code) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-inputs">
    <%= f.input :yaml %>
  </div>
  <div class="form-inputs">
    <%= f.input :content %>
  </div>
  <div class="form-inputs">
    <%= f.input :bibtex %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
