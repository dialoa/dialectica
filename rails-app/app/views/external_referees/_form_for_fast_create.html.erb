<%= simple_form_for(ExternalReferee.new, method: :post, url: external_referee_fast_create_path(submission_id: submission.id), data: {cy: "fast-create-external-referee_form"}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :firstname, label:"first name", placeholder: "" %>
    <%= f.input :lastname, label:"last name", placeholder: "" %>
    <%= f.input :email, label:"email", placeholder: "" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "create external referee", class: "btn btn-light border" %>
  </div>
<% end %>
